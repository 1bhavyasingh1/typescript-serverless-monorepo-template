{
  "name": "open-source-finder",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.58.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  },
  "scripts": {
    "dev": "pnpm --parallel --filter ./{apps,lib}/* dev",
    "build": "pnpm --filter ./{apps,lib}/* build",
    "generate": "pnpm --filter ./lib/db generate",
    "lint": "lint-staged",
    "prepare": "husky install",
    "commit": "git add . && cz",
    "clean": "rimraf --glob **/node_modules"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "eslint"
    ],
    "*.{ts,tsx}": [
      "tsc --noEmit --pretty"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && pnpx cz --hook || true"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
